            <kind>1</kind>
            <string>// Limits menu options depending on which menu the game is.
if(screen == 1 || screen == 2) {
    max_option = 4;
} else if(screen == 3){
    max_option = 3;
}

// The mouse can select things if the cursor is in especified areas
if(global.control) {
    // Allows mouse cursor movement through the menus
    if((mouse_x &gt; screenx - 512 &amp;&amp; mouse_x &lt; screenx + 512) &amp;&amp; (mouse_y &gt; screeny + 13 &amp;&amp; mouse_y &lt; screenx + 190) &amp;&amp; (can_read_mouse)) {    
        if(mouse_y &gt; screeny - 48 &amp;&amp; mouse_y &lt; screeny + 48) {
            position = 1;           
        } else if(mouse_y &gt; screeny + 48 &amp;&amp; mouse_y &lt; screeny + 96) {
            position = 2;              
        } else if(mouse_y &gt; screeny + 96 &amp;&amp; mouse_y &lt; screeny + 144) {
            position = 3;               
        } else if(mouse_y &gt; screeny + 144 &amp;&amp; mouse_y &lt; screeny + 192 &amp;&amp; max_option &gt; 3) {
            position = 4;         
        }
    }
} else {
    // Allows gamepad movement through the menus
    if(gamepad_axis_value(0, gp_axislv) &lt; -0.5 &amp;&amp; can_switch == true) {
        can_switch = false;
        position --;
        alarm[0] = 15;
        audio_play_sound(snd_menu_cursor, 0, false);
    } else if(gamepad_axis_value(0, gp_axislv) &gt; 0.5 &amp;&amp; can_switch == true) {
        can_switch = false;
        position ++;
        alarm[0] = 15;
        audio_play_sound(snd_menu_cursor, 0, false);    
    } 
}

// Responds to which element of the menu is selected when pressing the A button or the left click.
if(gamepad_button_check_pressed(0, gp_face1) || mouse_check_button_pressed(mb_left)) {
    if(position == max_option) {
        option_audio = snd_menu_cancel;
    } else {
        option_audio = snd_menu_accept;
    }
    
    if(can_switch) {
        can_switch = false;
        alarm[1] = 1;
        alarm[0] = 15;        
        audio_play_sound(option_audio, 0, false);   
    }
}

if(gamepad_button_check_pressed(0, gp_face2) || mouse_check_button_pressed(mb_right) || keyboard_check_pressed(vk_escape)) {    
    if(can_switch) {
        can_switch = false;
        can_read_mouse = false;
        position = max_option;
        alarm[1] = 1;
        alarm[0] = 15;
        audio_play_sound(option_audio, 0, false);   
    }
}

// Sets the color of the selected element and its text depennding on which screen it is.
if(position == 1) {
    c1 = c_green;
    c2 = c_olive;
    c3 = c_olive;
    c4 = c_olive;
    if(screen == 1) {
        text = "Play the story mode" 
    } else if(screen == 2) {
        text = "Chain combos killing enemies before the time runs out"
    } else if(screen == 3)  {
        text = "Adjust audio levels" 
    }           
} else if(position == 2) {
    c1 = c_olive;
    c2 = c_green;
    c3 = c_olive;
    c4 = c_olive;    
    if(screen == 1) {
        text = "Play objective-based game modes using diferent weapons and characters"                
    } else if(screen == 2) {
        text = "Survive to waves of enemies earning new weapons and upgrades"
    } else if(screen == 3)  {
        text = "Tweak video settings for better graphics / performance" 
    }                 
} else if(position == 3) {
    c1 = c_olive;
    c2 = c_olive;
    c3 = c_green;
    c4 = c_olive;  
    if(screen == 1) {
        text = "Adjust game properties to fit your likings";  
    } else if(screen == 2) {
        text = "Earn money for completing objectives"
    } else if(screen == 3)  {
        text = "Return to the previous screen" 
    }      
} else {
    c1 = c_olive;
    c2 = c_olive;
    c3 = c_olive;
    c4 = c_green;    
    if(screen == 1) {
        text = "Return to the desktop";  
    } else if(screen == 2) {
        text = "Return to the previous screen" 
    }
}

// Loops the positions of the menu
if(position &lt; 1) {
    position = max_option;
} else if(position &gt; max_option) {
    position = 1;
}

</string>
